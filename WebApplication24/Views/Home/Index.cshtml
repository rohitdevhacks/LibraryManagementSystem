@model List<WebApplication24.Models.Books>

@{
    Layout = null;
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    .search-container {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .search-box {
        width: 250px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        transition: all 0.3s ease-in-out;
    }

        .search-box:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            outline: none;
        }

    .search-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

        .search-button:hover {
            background-color: #0056b3;
        }


    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        height: 100vh;
        flex-direction: column;
        padding: 20px;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        position: absolute;
        top: 30px;
    }

    header {
        text-align: center;
        margin-bottom: 20px;
    }

        header h1 {
            font-size: 36px;
            color: #333;
        }
    .top-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .search-bar {
        padding: 8px 12px;
        font-size: 16px;
        width: 60%;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .add-book-btn {
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .add-book-btn:hover {
            background-color: #0056b3;
        }
    .table-container {
        overflow-x: auto;
    }

    .library-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

        .library-table thead {
            background-color: #007bff;
            color: #fff;
        }

            .library-table thead th {
                padding: 12px 15px;
                font-size: 16px;
                text-align: left;
            }

        .library-table tbody tr {
            border-bottom: 1px solid #f1f1f1;
        }

        .library-table tbody td {
            padding: 12px 15px;
            font-size: 14px;
            color: #333;
        }

        .library-table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .library-table tbody tr:hover {
            background-color: #f1f3f5;
        }

    .btn {
        background: red;
        padding: 6px 12px;
        font-size: 14px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .edit-btn {
        background-color: #28a745;
        color: white;
    }

        .edit-btn:hover {
            background-color: #218838;
        }

    .remove-btn {
        background-color: #dc3545;
        color: white;
        margin-left: 8px;
    }

        .remove-btn:hover {
            background-color: #c82333;
        }
    #searchbtn {
        background-color: #007bff;
    }
</style>

<div class="container">
    <header>
        <h1>Library Management System</h1>
    </header>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <div class="search-container">
            @Html.TextBox("searching", null, new { @class = "search-box", placeholder = "Search..." })
            <input type="submit" value="Search" id="searchbtn" class="search-button" />
        </div>
    }

   
    <div class="top-actions">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AddBook", "Home")'">Add Book</button>
    </div>

    <div class="table-container">
        <table class="library-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Category Type</th>
                    <th>Author Name</th>
                    <th>Publication Name</th>
                    <th>ISBN</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.CategoryType</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublicationName</td>
                            <td>@item.ISBN</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDate</td>
                            <td>
                                <button type="button" class="btn edit-btn" onclick="location.href='@Url.Action("Edit", "Home", new { id = item.Id })'">Edit</button>
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Home", new { id = item.Id })'">Delete</button>


                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>


